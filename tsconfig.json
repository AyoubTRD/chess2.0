{
  "compilerOptions": {
    "target": "es2016",
    "types": ["node", "jest"],
    "lib": ["es6"],
    "module": "ES6",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "__tests__", "jest.config.ts"]
}
